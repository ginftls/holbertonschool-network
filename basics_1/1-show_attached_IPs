#!/usr/bin/env bash
# Script that displays all active IPv4 IPs on the machine

# Using ip command (modern approach)
if command -v ip &> /dev/null; then
    ip -4 addr show | grep -oP '(?<=inet\s)\d+(\.\d+){3}' | sort
# Fallback to ifconfig if ip is not available
elif command -v ifconfig &> /dev/null; then
    ifconfig | grep -Eo 'inet (addr:)?([0-9]*\.){3}[0-9]*' | grep -Eo '([0-9]*\.){3}[0-9]*' | sort
# Last resort using hostname
else
    hostname -I | tr ' ' '\n' | grep -E '^[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+$' | sort
fi
